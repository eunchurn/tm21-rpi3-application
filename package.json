{
  "name": "tm21-rpi3-application",
  "version": "1.0.0",
  "description": "Raspberry Pi Application for TM21 Vibration Controller Monitoring",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "start": "nodemon --exec babel-node ./index.js",
    "forever:start": "forever --killTree start -a -l app.log -c node_modules/.bin/babel-node ./index.js",
    "forever:stop": "forever stopall > /dev/null",
    "forever:list": "forever list",
    "log": "tail -f ~/.forever/app.log",
    "restart": "yarn forever:stop && yarn forever:start"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/eunchurn/tm21-rpi3-application.git"
  },
  "keywords": [
    "Raspberry",
    "Pi",
    "MQTT",
    "Monitoring",
    "Node"
  ],
  "author": "Eunchurn Park (eunchurn.park@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eunchurn/tm21-rpi3-application/issues"
  },
  "homepage": "https://github.com/eunchurn/tm21-rpi3-application#readme",
  "dependencies": {
    "binary-parser": "^1.4.0",
    "buffer-compare": "^1.1.1",
    "cbor-sync": "^1.0.4",
    "chalk": "^2.4.2",
    "dotenv": "^8.1.0",
    "mqtt": "^3.0.0",
    "netcat": "^1.4.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/preset-env": "^7.6.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "forever-fixed": "^0.16.1",
    "nodemon": "^1.19.2",
    "shelljs": "^0.8.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "@src": "./src",
            "@libs": "./libs"
          }
        }
      ]
    ]
  }
}
