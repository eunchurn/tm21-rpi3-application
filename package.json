{
  "name": "tm21-rpi3-application",
  "version": "1.0.2",
  "description": "Raspberry Pi Application for TM21 Vibration Controller Monitoring",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register ./src/index.ts",
    "lint": "eslint .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prerelease": "npm run lint && npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin master --follow-tags",
    "tree": "tree -a -I 'node_modules|.git'",
    "stacktest": "ts-node-dev --respawn ./src/libs/stackTesting.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/eunchurn/tm21-rpi3-application.git"
  },
  "keywords": [
    "Raspberry",
    "Pi",
    "MQTT",
    "Monitoring",
    "Node"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "Eunchurn Park (eunchurn.park@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eunchurn/tm21-rpi3-application/issues"
  },
  "homepage": "https://github.com/eunchurn/tm21-rpi3-application#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "collectCoverage": true
  },
  "_moduleAliases": {
    "@src": "dist",
    "@libs": "dist/libs"
  },
  "dependencies": {
    "binary-parser": "^1.7.0",
    "buffer-compare": "^1.1.1",
    "cbor-sync": "^1.0.4",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "mqtt": "^4.2.6",
    "redis": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/binary-parser": "1.5.1",
    "@types/buffer-compare": "0.0.30",
    "@types/jest": "26.0.22",
    "@types/redis": "2.8.32",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "documentation": "13.2.4",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.2.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "5.2.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "open-cli": "6.0.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "standard-version": "9.2.0",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  }
}
