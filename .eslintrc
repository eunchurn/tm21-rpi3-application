{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "prettier/flowtype",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["flowtype", "flowtype-errors"],
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@src", "./src/"],
          ["@libs", "./src/libs/"]
          // ["@build", "./build/Release/"]
        ],
        "extensions": [".js", ".json"]
      }
    }
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "flowtype-errors/show-errors": "error",
    "prettier/prettier": ["error"],
    "no-console": ["off"],
    "no-unused-vars": ["off"],
    "no-param-reassign": ["off"]
  }
}
